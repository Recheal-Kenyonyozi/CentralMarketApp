<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#4ee7e7"
    tools:context="com.example.bornittah.myapplication.fragments.VegetableFragment">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="These are the vegetables sold in mbarara central market,
please make a choice for agood diet."
        android:textColor="#0d0d0d" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carrots"
        android:layout_marginTop="150dp"
        android:textSize="20dp"
        android:textColor="#0e0e0e"/>


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginTop="200dp"
        android:src="@drawable/carrots"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cabbage"
        android:layout_marginTop="320dp"
        android:textSize="20dp"
        android:textColor="#0e0e0e"/>
    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:src="@drawable/cabages"
        android:layout_marginTop="370dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mixed vegetables"
        android:layout_marginTop="470dp"
        android:textSize="20dp"
        android:textColor="#0e0e0e"/>
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:src="@drawable/vegatables"
        android:layout_marginTop="520dp"
        />



        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
