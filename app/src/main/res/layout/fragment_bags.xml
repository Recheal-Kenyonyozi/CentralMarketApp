<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#67eae4"
    tools:context="com.example.bornittah.myapplication.fragments.BagsFragment">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="These are categories of bags sold in the supermarket,come and buy first class bags
These include;crossbags,hand bags and many others"
        android:textColor="#0b0b0b"
        android:id="@+id/textView5" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hand bags"
        android:layout_marginTop="130dp"
        android:textSize="20dp"
        android:textColor="#0e0e0e"/>


    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/bags"
        android:id="@+id/imageView7"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="200dp"
         />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cross bags"
        android:layout_marginTop="470dp"
        android:textSize="20dp"
        android:textColor="#0e0e0e"/>


    <ImageView
        android:layout_width="150dp"
        android:layout_height="250dp"
        android:layout_marginTop="490dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/crossbag"
        android:id="@+id/imageView6"
         />
        </RelativeLayout>
    </ScrollView>



</RelativeLayout>
